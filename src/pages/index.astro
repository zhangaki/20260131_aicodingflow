            <script is:inline>
                // Defer heavy interactions until after load
                window.addEventListener('load', () => {
                    // Interactive Bento Mouse Effect
                    // Interactive Bento Mouse Effect - Optimized with RAF
                    document.querySelectorAll('.bento-item').forEach(item => {
                        let isHovered = false;
                        
                        item.addEventListener('mouseenter', () => isHovered = true);
                        item.addEventListener('mouseleave', () => isHovered = false);

                        item.addEventListener('mousemove', e => {
                            if (!isHovered) return;
                            
                            requestAnimationFrame(() => {
