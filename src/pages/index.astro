---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => {
		const dateA = a.data.pubDate instanceof Date ? a.data.pubDate : new Date(a.data.pubDate);
		const dateB = b.data.pubDate instanceof Date ? b.data.pubDate : new Date(b.data.pubDate);
		return dateB.valueOf() - dateA.valueOf();
	}
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Background Animation */
            .background-effects {
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                z-index: -1;
                overflow: hidden;
                pointer-events: none;
            }
            .grid-overlay {
                position: absolute;
                inset: 0;
                background-image: 
                    linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
                    linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
                background-size: 50px 50px;
                mask-image: radial-gradient(circle at center, black 60%, transparent 100%);
            }
            .glow-orb {
                position: absolute;
                border-radius: 50%;
                filter: blur(80px);
                opacity: 0.4;
                animation: float 20s infinite ease-in-out;
            }
            .orb-1 { width: 400px; height: 400px; background: var(--accent); top: -10%; left: -10%; animation-delay: 0s; }
            .orb-2 { width: 500px; height: 500px; background: #6366f1; bottom: -20%; right: -10%; animation-delay: -10s; }

            @keyframes float {
                0%, 100% { transform: translate(0, 0); }
                50% { transform: translate(30px, 50px); }
            }

			main { width: 100%; max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; position: relative; }
			
            /* Hero Section */
            .hero {
                padding: 4rem 0;
                text-align: center;
                max-width: 1000px;
                margin: 0 auto;
                position: relative;
            }
            .hero-badge {
                display: inline-block;
                padding: 0.4rem 1rem;
                background: rgba(111, 177, 252, 0.1);
                border: 1px solid rgba(111, 177, 252, 0.2);
                border-radius: 100px;
                color: #93c5fd;
                font-size: 0.75rem;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                margin-bottom: 2rem;
            }
            .hero h1 {
                font-size: 4.5rem;
                line-height: 1;
                font-weight: 800;
                letter-spacing: -0.04em;
                margin-bottom: 1.5rem;
                background: linear-gradient(to bottom, #fff 60%, rgba(255,255,255,0.4));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }
            .hero-subtitle {
                font-size: 1.25rem;
                color: #94a3b8;
                line-height: 1.6;
                margin-bottom: 3rem;
                max-width: 700px;
                margin-left: auto;
                margin-right: auto;
            }

            /* Bento Grid */
            .featured-sections { margin: 6rem 0; }
            .featured-sections h2 { font-size: 2.5rem; margin-bottom: 3rem; text-align: left; }
            .bento-grid {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                grid-auto-rows: minmax(280px, auto);
                gap: 1.5rem;
            }
            .bento-item {
                padding: 2.5rem;
                border-radius: 32px;
                border: 1px solid rgba(255,255,255,0.1);
                background: rgba(15, 23, 42, 0.4);
                backdrop-filter: blur(15px);
                transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                text-decoration: none;
                color: inherit;
            }
            .bento-item:nth-child(1) { grid-column: span 2; }
            .bento-item:hover {
                border-color: var(--accent);
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.4);
            }
            .bento-item h3 { font-size: 1.8rem; color: #fff; margin: 0 0 0.5rem 0; font-weight: 700; }
            .bento-item p { color: #94a3b8; margin: 0; line-height: 1.5; font-size: 1rem; }

            /* Testimonials Marquee */
            @keyframes marquee-scroll {
                0% { transform: translateX(0); }
                100% { transform: translateX(-50%); }
            }

            .marquee-wrapper {
                margin: 4rem 0;
                overflow: hidden;
                position: relative;
                width: 100%;
                -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
                mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
            }
            .marquee-track {
                display: flex !important;
                flex-direction: row !important;
                gap: 1.5rem;
                width: max-content; 
                animation: marquee-scroll 40s linear infinite;
                padding: 1rem 0;
            }
            .marquee-track:hover {
                animation-play-state: paused;
            }
            .review-card {
                background: rgba(30, 41, 59, 0.4);
                border: 1px solid rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
                border-radius: 20px;
                padding: 1.5rem;
                width: 320px !important;
                min-width: 320px;
                flex-shrink: 0;
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }
            .reviewer-header {
                display: flex;
                align-items: center;
                gap: 0.8rem;
                width: 100%;
            }
            .avatar {
                width: 44px;
                height: 44px;
                min-width: 44px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: 800;
                color: rgba(255,255,255,0.9);
                flex-shrink: 0;
            }
            .reviewer-info {
                display: flex;
                flex-direction: column;
            }
            .reviewer-name { font-size: 1rem; font-weight: 700; color: #fff; }
            .reviewer-role { font-size: 0.75rem; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.05em; }
            .review-text { margin: 0; color: #cbd5e1; font-size: 0.95rem; line-height: 1.6; font-style: italic; }

            /* Latest Insights (Post Grid) */
			.latest-insights { margin-top: 6rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 4rem; }
            .latest-insights h2 { font-size: 2.5rem; margin-bottom: 2rem; }
			.posts-grid { 
                display: grid; 
                grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); 
                gap: 2rem; 
                margin-top: 2rem;
                /* Optimize rendering for many items */
                content-visibility: auto;
                contain-intrinsic-size: 1000px;
            }
			.post-card { display: flex; flex-direction: column; border-radius: 16px; overflow: hidden; text-decoration: none; background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); transition: transform 0.3s ease; height: 100%; }
			.post-card:hover { transform: translateY(-8px); }
			.post-image { height: 200px; background: rgba(0, 0, 0, 0.2); overflow: hidden; }
			.post-image img { width: 100%; height: 100%; object-fit: cover; transition: opacity 0.3s ease; }
			.post-content { padding: 1.5rem; flex-grow: 1; }
			.post-content h3 { margin: 0 0 0.5rem 0; color: #fff; font-size: 1.25rem; line-height: 1.4; }
			.post-content p { color: #94a3b8; font-size: 0.9rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; line-height: 1.6; }

            @media (max-width: 720px) {
                .hero h1 { font-size: 2.8rem; }
                .bento-grid { grid-template-columns: 1fr; }
                .bento-item:nth-child(1) { grid-column: span 1; }
                .review-card { width: 280px !important; min-width: 280px; }
            }
		</style>
	</head>
	<body>
		<Header />
        <div class="background-effects">
            <div class="grid-overlay"></div>
            <div class="glow-orb orb-1"></div>
            <div class="glow-orb orb-2"></div>
        </div>
		<main>
			<section class="hero">
                <div class="hero-badge">Autonomous AI Factory v2.0</div>
				<h1>Maximize Your Potential with AI</h1>
				<p class="hero-subtitle">{SITE_DESCRIPTION}</p>
			</section>

            <section class="featured-sections">
                <h2>Our Ecosystem</h2>
                <div class="bento-grid">
                    <a href="/tools/aeo-audit" class="bento-item">
                        <div>
                            <h3>AEO Auditor 2.0</h3>
                            <p>Optimize your site for AI Search (Perplexity, ChatGPT). Get real-time scores and AI-powered fix prompts.</p>
                        </div>
                        <img 
                            src="/assets/aeo-mockup.png" 
                            alt="AEO Auditor" 
                            width="200" 
                            height="120" 
                            decoding="async"
                            style="margin-top: 1.5rem; border-radius: 12px; opacity: 0.8;"
                        />
                    </a>
                    <a href="/blog" class="bento-item">
                        <div>
                            <h3>Deep Guides</h3>
                            <p>Exhaustive breakdowns of AI workflows used by top 1% indie hackers.</p>
                        </div>
                    </a>
                    <a href="/about" class="bento-item">
                        <div>
                            <h3>Architecture</h3>
                            <p>See the code, agents, and pipelines powering this autonomous hub.</p>
                        </div>
                    </a>
                </div>
            </section>

            <!-- Testimonials Marquee -->
            <section class="marquee-wrapper">
                <div class="marquee-track">
                    <div class="review-card">
                        <div class="reviewer-header">
                            <div class="avatar" style="background: #FF9F1C">J</div>
                            <div class="reviewer-info"><div class="reviewer-name">James T.</div><div class="reviewer-role">Solo Founder</div></div>
                        </div>
                        <p class="review-text">“This is the only newsletter I actually open. The 'Digital Twin' guide was mind-blowing.”</p>
                    </div>
                    <div class="review-card">
                        <div class="reviewer-header">
                            <div class="avatar" style="background: #2EC4B6">A</div>
                            <div class="reviewer-info"><div class="reviewer-name">Aisha P.</div><div class="reviewer-role">AI Engineer</div></div>
                        </div>
                        <p class="review-text">“Precise, technical, and forward-thinking. This is where the alpha is.”</p>
                    </div>
                    <div class="review-card">
                        <div class="reviewer-header">
                            <div class="avatar" style="background: #E71D36">T</div>
                            <div class="reviewer-info"><div class="reviewer-name">Tom W.</div><div class="reviewer-role">SaaS Builder</div></div>
                        </div>
                        <p class="review-text">“I use the Tools directory as my homepage. It filters out so much noise.”</p>
                    </div>
                    <!-- REPEAT FOR LOOP -->
                    <div class="review-card">
                        <div class="reviewer-header">
                            <div class="avatar" style="background: #FF9F1C">J</div>
                            <div class="reviewer-info"><div class="reviewer-name">James T.</div><div class="reviewer-role">Solo Founder</div></div>
                        </div>
                        <p class="review-text">“This is the only newsletter I actually open. The 'Digital Twin' guide was mind-blowing.”</p>
                    </div>
                    <div class="review-card">
                        <div class="reviewer-header">
                            <div class="avatar" style="background: #2EC4B6">A</div>
                            <div class="reviewer-info"><div class="reviewer-name">Aisha P.</div><div class="reviewer-role">AI Engineer</div></div>
                        </div>
                        <p class="review-text">“Precise, technical, and forward-thinking. This is where the alpha is.”</p>
                    </div>
                    <div class="review-card">
                        <div class="reviewer-header">
                            <div class="avatar" style="background: #E71D36">T</div>
                            <div class="reviewer-info"><div class="reviewer-name">Tom W.</div><div class="reviewer-role">SaaS Builder</div></div>
                        </div>
                        <p class="review-text">“I use the Tools directory as my homepage. It filters out so much noise.”</p>
                    </div>
                </div>
            </section>

			<section class="latest-insights">
				<h2>Latest Insights</h2>
				<div class="posts-grid">
					{
						posts.map((post) => (
							<a href={`/blog/${post.id}`} class="post-card">
								<div class="post-image">
									<img 
                                        src={post.data.heroImage} 
                                        alt="" 
                                        loading="lazy" 
                                        decoding="async"
                                        width="400"
                                        height="200"
                                    />
								</div>
								<div class="post-content">
									<h3>{post.data.title}</h3>
									<p>{post.data.description}</p>
								</div>
							</a>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
