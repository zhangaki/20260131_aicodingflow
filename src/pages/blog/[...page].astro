---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import BackgroundEffects from '../../components/BackgroundEffects.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

export const prerender = true;

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
	return paginate(posts, { pageSize: 12 });
}

const { page } = Astro.props;
const allPosts = await getCollection('blog');
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))].sort();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
            :root {
                --accent-orange: #E96B46;
                --accent-yellow: #FF8C64;
                --bg-card: rgba(30, 41, 59, 0.4);
                --border-color: rgba(148, 163, 184, 0.1);
            }

            main { 
                width: 1200px; 
                max-width: 100%; 
                margin: auto; 
                padding: 8rem 1em 2em; 
                min-height: 100vh;
            }

            /* Page Header */
            .page-header {
                text-align: center;
                margin-bottom: 3rem;
                padding: 2rem 0;
            }
            .page-title {
                font-size: 2.5rem;
                font-weight: 800;
                background: linear-gradient(135deg, #fff 0%, #94a3b8 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 0.5rem;
                letter-spacing: -0.05em;
            }
            .page-subtitle {
                color: #94a3b8;
                font-size: 1.1rem;
                max-width: 600px;
                margin: 0 auto;
            }

            /* Controls Container */
            .controls-sticky-wrapper {
                position: sticky;
                top: 1rem;
                z-index: 50;
                margin-bottom: 3rem;
                background: rgba(13, 17, 23, 0.85);
                backdrop-filter: blur(12px);
                border: 1px solid var(--border-color);
                border-radius: 24px;
                padding: 1rem;
                box-shadow: 0 4px 20px rgba(0,0,0,0.3);
                display: flex;
                flex-wrap: wrap;
                gap: 1rem;
                align-items: center;
                animation: fadeIn 0.6s ease-out;
            }

            .search-wrapper {
                position: relative;
                flex: 1;
                min-width: 250px;
            }
            .search-input {
                width: 100%;
                box-sizing: border-box; /* Force padding to be included in width */
                background: rgba(0, 0, 0, 0.3);
                border: 1px solid var(--border-color);
                padding: 0.75rem 1rem 0.75rem 2.8rem;
                border-radius: 12px;
                color: #fff;
                font-size: 0.95rem;
                transition: all 0.2s;
            }
            .search-input:focus {
                outline: none;
                border-color: var(--accent-orange);
                background: rgba(0, 0, 0, 0.5);
                box-shadow: 0 0 0 2px rgba(233, 107, 70, 0.3);
            }
            .search-input::placeholder { color: #64748b; }
            .search-icon {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: #64748b;
                pointer-events: none;
            }

            /* Scrollable Tags */
            .tags-scroll-container {
                flex: 2;
                display: flex;
                gap: 0.5rem;
                overflow-x: auto;
                padding: 0 1rem 0 0;
                scrollbar-width: none; /* Firefox */
                -ms-overflow-style: none;  /* IE */
                mask-image: linear-gradient(to right, black 95%, transparent 100%);
            }
            
            .tags-scroll-container::-webkit-scrollbar { display: none; }

            .tag-chip {
                background: rgba(255, 255, 255, 0.05);
                border: 1px solid var(--border-color);
                padding: 0.5rem 1.2rem;
                border-radius: 8px;
                color: #94a3b8;
                font-size: 0.85rem;
                font-weight: 500;
                text-decoration: none; /* Link style reset */
                white-space: nowrap;
                transition: all 0.2s;
                user-select: none;
                display: inline-block;
            }
            .tag-chip:hover {
                background: rgba(255, 255, 255, 0.1);
                color: #fff;
            }
            .tag-chip.active {
                background: var(--accent-orange);
                border-color: var(--accent-orange);
                color: #fff;
            }

            /* Grid */
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
            
            /* Card Animation */
			li {
                opacity: 1;
                transform: translateY(0);
                transition: opacity 0.3s ease, transform 0.3s ease;
            }
            li.hidden {
                display: none;
                opacity: 0;
                transform: translateY(20px);
            }

			a.card {
				display: flex;
                height: 100%;
				flex-direction: column;
				text-decoration: none;
				transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
				padding: 0;
				border-radius: 16px;
				overflow: hidden;
                background: var(--bg-card);
                border: 1px solid var(--border-color);
                position: relative;
			}
            a.card::before {
                content: '';
                position: absolute;
                inset: 0;
                border-radius: 16px;
                padding: 1px;
                background: linear-gradient(to bottom, rgba(255,255,255,0.1), transparent);
                -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
                mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
                -webkit-mask-composite: xor;
                mask-composite: exclude;
                pointer-events: none;
            }

			a.card:hover {
				transform: translateY(-5px);
                background: rgba(30, 41, 59, 0.6);
                box-shadow: 0 15px 30px rgba(0,0,0,0.5);
                border-color: rgba(233, 107, 70, 0.3);
			}
            
            .img-container {
                width: 100%;
                aspect-ratio: 16/9;
                overflow: hidden;
            }
			.img-container img {
				width: 100%;
				height: 100%;
				object-fit: cover;
                transition: transform 0.6s ease;
			}
            a.card:hover img { transform: scale(1.08); }

            .content { padding: 1.5rem; display: flex; flex-direction: column; flex: 1; border-top: 1px solid rgba(255,255,255,0.05); }
			
            .date {
				margin: 0;
				color: #64748b;
				font-size: 0.8rem;
                font-family: 'JetBrains Mono', monospace;
                margin-bottom: 0.75rem;
			}
            
            .title {
				margin: 0;
				color: #e2e8f0;
				line-height: 1.4;
				font-size: 1.25rem;
				font-weight: 700;
				margin-bottom: 1rem;
			}
            a.card:hover .title { color: var(--accent-orange); }

            .post-tags {
                margin-top: auto;
                display: flex;
                gap: 0.5rem;
                flex-wrap: wrap;
            }
            .mini-tag {
                font-size: 0.7rem;
                padding: 0.2rem 0.6rem;
                border-radius: 6px;
                background: rgba(233, 107, 70, 0.1);
                color: var(--accent-orange);
                border: 1px solid rgba(233, 107, 70, 0.3);
                font-family: var(--font-main);
                font-weight: 600;
                transition: all 0.2s;
            }
            a.card:hover .mini-tag {
                background: var(--accent-orange);
                color: #fff;
            }

            /* Pagination */
            .pagination {
                display: flex;
                justify-content: center;
                gap: 1rem;
                margin-top: 4rem;
                padding-top: 2rem;
                border-top: 1px solid var(--border-color);
            }
            .pagination a {
                padding: 0.8rem 1.5rem;
                border: 1px solid var(--border-color);
                border-radius: 12px;
                color: #fff;
                text-decoration: none;
                background: rgba(255,255,255,0.05);
                backdrop-filter: blur(10px);
                transition: all 0.2s;
                font-weight: 600;
            }
            .pagination a:hover {
                background: var(--accent-orange);
                border-color: var(--accent-orange);
                transform: translateY(-2px);
            }
            .pagination span {
                padding: 0.8rem 1.5rem;
                color: #64748b;
                font-family: 'JetBrains Mono', monospace;
                display: flex;
                align-items: center;
            }

            /* States */
            #no-results {
                display: none;
                grid-column: 1 / -1;
                text-align: center;
                padding: 4rem 1rem;
                color: #64748b;
                border: 1px dashed var(--border-color);
                border-radius: 12px;
            }

            /* Animations */
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(-10px); }
                to { opacity: 1; transform: translateY(0); }
            }

			@media (max-width: 768px) {
                :root {
                    --page-padding: 1rem;
                }
                body, html { overflow-x: hidden; }
                main { 
                    width: 100%; 
                    padding: var(--page-padding); 
                    max-width: 100vw; 
                    overflow-x: hidden; 
                    box-sizing: border-box;
                }
                
				ul { 
                    display: flex; 
                    flex-direction: column; 
                    gap: 1.5rem; 
                }

                /* Revert to Contained Card style for safety */
                .controls-sticky-wrapper {
                    box-sizing: border-box !important; 
                    flex-direction: column;
                    align-items: stretch;
                    top: 1rem; 
                    margin-left: 0; 
                    margin-right: 0;
                    width: 100%;
                    border-radius: 16px; 
                    border: 1px solid var(--border-color);
                    gap: 1rem;
                    padding: 1rem;
                    max-width: 100%;
                    overflow: hidden; 
                }
                
                .search-wrapper { 
                    width: 100%; 
                    min-width: 0;
                    box-sizing: border-box;
                }
                .search-input {
                    box-sizing: border-box;
                    width: 100%;
                }
                
                .tags-scroll-container {
                    display: block !important; 
                    width: 100% !important; 
                    max-width: 100% !important;
                    overflow-x: auto !important;
                    white-space: nowrap !important;
                    flex: none !important;
                    padding-bottom: 5px; 
                    padding-right: 1rem;
                    -webkit-overflow-scrolling: touch;
                }
                
                /* Reset chip spacing for inline-block flow */
                :global(.tag-chip) {
                    display: inline-block !important;
                    margin-right: 0.5rem;
                }
                .page-title { font-size: 2rem; }
			}
		</style>
	</head>
	<body>
		<Header />
        <BackgroundEffects />
		<main>
            <div class="page-header">
                <h1 class="page-title">Engineering Insights</h1>
                <p class="page-subtitle">Exploring the frontiers of AI, Cybersecurity, and Future Tech.</p>
            </div>

            <div class="controls-sticky-wrapper">
                <div class="search-wrapper">
                    <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"></circle><path d="M21 21l-4.35-4.35"></path></svg>
                    <input type="text" id="searchInput" class="search-input" placeholder="Filter visible posts..." autocomplete="off" />
                </div>
                
                <div class="tags-scroll-container" id="tagsContainer">
                    <span style="color: #64748b; font-size: 0.85rem; font-weight: 600; padding: 0.5rem 0.5rem 0.5rem 0; white-space: nowrap;">Topics:</span>
                    <a href="/blog" class={`tag-chip ${!Astro.url.searchParams.get('tag') ? 'active' : ''}`}>All</a>
                    {allTags.map(tag => (
                        <span class="tag-chip">{tag}</span>
                    ))}
                </div>
            </div>

			<section>
				<ul id="postsGrid">
					{
						page.data.map((post) => (
							<li class="post-item" 
                                data-title={post.data.title.toLowerCase()} 
                                data-tags={(post.data.tags || []).join(',')}
                            >
								<a href={`/blog/${post.id}/`} class="card">
                                    <div class="img-container">
									    {post.data.heroImage && (
										    <img width={720} height={360} src={post.data.heroImage} alt="" loading="lazy" decoding="async" />
									    )}
                                    </div>
                                    <div class="content">
                                        <p class="date">
                                            {post.data.pubDate.toLocaleDateString('en-us', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric',
                                            })}
                                        </p>
									    <h4 class="title">{post.data.title}</h4>
                                        <div class="post-tags">
                                            {(post.data.tags?.slice(0,3) || []).map(t => (
                                                <span class="mini-tag">{t}</span>
                                            ))}
                                            {(post.data.tags?.length || 0) > 3 && <span class="mini-tag">+{post.data.tags.length - 3}</span>}
                                        </div>
                                    </div>
								</a>
							</li>
						))
					}
                    <div id="no-results">
                        <p>No articles found on this page.</p>
                        <button id="resetBtn" style="background:transparent; border:1px solid var(--accent-orange); color:var(--accent-orange); padding:0.5rem 1rem; border-radius:6px; cursor:pointer; margin-top:1rem; font-size:0.9rem;">Clear Filter</button>
                    </div>
				</ul>

                <div class="pagination">
                    {page.url.prev ? <a href={page.url.prev}>← Previous</a> : null}
                    <span>Page {page.currentPage} of {page.lastPage}</span>
                    {page.url.next ? <a href={page.url.next}>Next →</a> : null}
                </div>
			</section>
		</main>
		<Footer />

        <script>
            // Client-side filtering logic (Only determines visibility on CURRENT page)
            const searchInput = document.getElementById('searchInput');
            const statusMsg = document.getElementById('no-results');
            const resetBtn = document.getElementById('resetBtn');
            const items = document.querySelectorAll('.post-item');

            let currentSearch = '';

            window.filterPosts = function() {
                let visibleCount = 0;
                const term = currentSearch.trim();

                items.forEach(item => {
                    const title = item.getAttribute('data-title');
                    
                    const matchesSearch = !term || title.includes(term);

                    if (matchesSearch) {
                        item.classList.remove('hidden');
                        visibleCount++;
                    } else {
                        item.classList.add('hidden');
                    }
                });

                statusMsg.style.display = visibleCount === 0 ? 'block' : 'none';
            }

            // Search Event
            searchInput.addEventListener('input', (e) => {
                currentSearch = e.target.value.toLowerCase();
                window.filterPosts();
            });

            // Reset Button
            resetBtn.addEventListener('click', () => {
                currentSearch = '';
                searchInput.value = '';
                window.filterPosts();
            });
        </script>
	</body>
</html>
