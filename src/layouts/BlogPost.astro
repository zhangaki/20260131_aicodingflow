---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import AffiliateCard from '../components/AffiliateCard.astro';
import SocialShare from '../components/SocialShare.astro';

const { post, prevPost, nextPost } = Astro.props;

// Support both CollectionEntry (from blog post) and direct props (from about page)
const title = post?.data?.title || Astro.props.title;
const description = post?.data?.description || Astro.props.description;
const heroImage = post?.data?.heroImage || Astro.props.heroImage;
const pubDate = post?.data?.pubDate || Astro.props.pubDate;
const updatedDate = post?.data?.updatedDate || Astro.props.updatedDate;

const displayDate = pubDate instanceof Date ? pubDate : new Date(pubDate);

// Calculate Reading Time (rough estimation)
const wordCount = 1200; 
const readingTime = Math.ceil(wordCount / 200);
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "BlogPosting",
			"headline": title,
			"image": [heroImage],
			"datePublished": !isNaN(displayDate.getTime()) ? displayDate.toISOString() : new Date().toISOString(),
			"dateModified": updatedDate && !isNaN(new Date(updatedDate).getTime()) ? new Date(updatedDate).toISOString() : (!isNaN(displayDate.getTime()) ? displayDate.toISOString() : new Date().toISOString()),
			"author": [{
				"@type": "Person",
				"name": "Super Individual AI",
				"url": "https://example.com/about"
			}]
		})} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
                padding: 0;
			}
			.hero-image {
				width: 100%;
                height: 50vh; /* Shorter image */
                position: relative;
                overflow: hidden;
			}
            /* ... (hero-image::after unchanged) ... */
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 0; 
				box-shadow: none;
                width: 100%;
                height: 100%;
                object-fit: cover; 
			}
			.prose {
				width: 900px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3.5rem;
				color: var(--gray-dark);
                /* Restore Glass Effect */
				background: rgba(15, 23, 42, 0.6); 
				backdrop-filter: blur(40px);
				-webkit-backdrop-filter: blur(40px);
				border-radius: 32px;
				border: 1px solid rgba(255,255,255,0.1);
				box-shadow: 0 -20px 60px -10px rgba(0,0,0,0.5);
				margin-top: -20vh; /* Move up significantly */
				position: relative;
				z-index: 10;
			}
			.breadcrumb {
                font-family: 'JetBrains Mono', monospace;
				font-size: 0.8rem;
				color: #94a3b8;
				margin-bottom: 2rem;
				display: flex;
                flex-wrap: wrap;
				gap: 0.8rem;
				font-weight: 500;
			}
			.breadcrumb a {
				color: #cbd5e1;
				text-decoration: none;
				transition: color 0.2s;
                border-bottom: 1px dashed transparent;
			}
			.breadcrumb a:hover {
				color: var(--accent);
                border-bottom-color: var(--accent);
			}
            .breadcrumb .current {
                color: #fff;
                opacity: 0.6;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                max-width: 300px;
            }

			.reading-time {
				margin-left: 0.5rem;
				opacity: 0.7;
				font-weight: 500;
			}
			.title {
				margin-bottom: 2.5rem;
				padding: 0;
				text-align: left;
                border-bottom: 1px solid rgba(255,255,255,0.05);
                padding-bottom: 2rem;
			}
			.title h1 {
				margin: 0 0 1rem 0;
				font-size: 3.2rem;
				line-height: 1.1;
				font-weight: 800;
				letter-spacing: -0.03em;
                color: #fff;
			}
			.date {
				margin-bottom: 0.5rem;
				color: var(--accent);
				font-weight: 600;
				font-size: 0.95rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                display: flex;
                align-items: center;
			}
			.last-updated-on {
				font-style: italic;
                font-size: 0.85rem;
                opacity: 0.8;
                margin-left: auto;
			}
			@media (max-width: 720px) {
                .hero-image {
                    height: 40vh;
                }
				.prose {
					width: 100%;
					padding: 1.5rem;
					margin-top: -5vh;
					border-radius: 20px 20px 0 0;
                    border: none;
                    border-top: 1px solid rgba(255,255,255,0.08);
				}
				.title h1 {
					font-size: 2.2rem;
				}
                .breadcrumb .current { display: none; }
                .post-navigation {
                    flex-direction: column;
                }
                .nav-link {
                    width: 100%;
                    text-align: center;
                }
                .nav-link.next {
                    text-align: center;
                    align-items: center;
                }
			}

            /* Post Navigation */
            .post-navigation {
                margin-top: 4rem;
                padding-top: 2rem;
                display: flex;
                justify-content: space-between;
                gap: 2rem;
                border-top: 1px solid rgba(255, 255, 255, 0.1);
            }
            .nav-link {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
                text-decoration: none;
                flex: 1;
                max-width: 48%;
                transition: all 0.3s ease;
                padding: 1rem;
                border-radius: 12px;
                background: rgba(255,255,255,0.02);
                border: 1px solid transparent;
            }
            .nav-link:hover {
                background: rgba(255,255,255,0.05);
                border-color: rgba(255,255,255,0.1);
                transform: translateY(-2px);
            }
            .nav-link.next {
                text-align: right;
                align-items: flex-end;
            }
            .nav-label {
                font-size: 0.8rem;
                color: #94a3b8;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                font-weight: 600;
            }
            .nav-title {
                color: #e2e8f0;
                font-weight: 600;
                line-height: 1.4;
            }
            .nav-link:hover .nav-title {
                color: var(--accent-blue);
            }
            .nav-placeholder {
                flex: 1;
            }
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt={title} loading="lazy" decoding="async" />}
				</div>
				<div class="prose">
					<nav class="breadcrumb">
						<a href="/">Home</a> <span>/</span> 
						<a href="/blog">Blog</a> <span>/</span> 
						<span class="current">{title}</span>
					</nav>
					<div class="title">
						<div class="date">
							<FormattedDate date={displayDate} />
							<span class="reading-time">• {readingTime} min read</span>
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
							</div>
						<h1>{title}</h1>
					</div>
					<slot />
					<SocialShare title={title} url={Astro.url.href} />

                    <div class="post-navigation">
                        {prevPost ? (
                            <a href={`/blog/${prevPost.id}/`} class="nav-link prev">
                                <span class="nav-label">← Previous</span>
                                <span class="nav-title">{prevPost.data.title}</span>
                            </a>
                        ) : (
                            <div class="nav-placeholder"></div>
                        )}
                        
                        {nextPost ? (
                            <a href={`/blog/${nextPost.id}/`} class="nav-link next">
                                <span class="nav-label">Next →</span>
                                <span class="nav-title">{nextPost.data.title}</span>
                            </a>
                        ) : (
                            <div class="nav-placeholder"></div>
                        )}
                    </div>
                </div>
			</article>
		</main>
		<Footer />
		<script>
			// Wrap tables in scrollable container for mobile
			document.querySelectorAll('.prose table').forEach(table => {
				if (!table.parentElement?.classList.contains('table-scroll')) {
					const wrapper = document.createElement('div');
					wrapper.className = 'table-scroll';
					wrapper.style.cssText = 'width:100%;overflow-x:auto;-webkit-overflow-scrolling:touch;margin:2rem 0;';
					table.parentNode?.insertBefore(wrapper, table);
					wrapper.appendChild(table);
					table.style.margin = '0';
					table.style.minWidth = '600px';
				}
			});
		</script>
	</body>
</html>
