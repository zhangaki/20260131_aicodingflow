---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import BackgroundEffects from '../components/BackgroundEffects.astro';
import AffiliateCard from '../components/AffiliateCard.astro';
import SocialShare from '../components/SocialShare.astro';

const { post, prevPost, nextPost } = Astro.props;
import { getCollection } from 'astro:content';

// Support both CollectionEntry (from blog post) and direct props (from about page)
const title = post?.data?.title || Astro.props.title;
const description = post?.data?.description || Astro.props.description;
const heroImage = post?.data?.heroImage || Astro.props.heroImage;
const pubDate = post?.data?.pubDate || Astro.props.pubDate;
const updatedDate = post?.data?.updatedDate || Astro.props.updatedDate;
const noindex = post?.data?.noindex || false;

const displayDate = pubDate instanceof Date ? pubDate : new Date(pubDate);

// Calculate Reading Time from actual content
const bodyText = post?.body || '';
const actualWordCount = bodyText.split(/\s+/).filter(Boolean).length;
const readingTime = Math.max(1, Math.ceil(actualWordCount / 200));

// Extract FAQ items from markdown body for FAQPage schema
const faqItems: Array<{question: string; answer: string}> = [];
if (bodyText) {
	const faqMatch = bodyText.match(/##+ (?:FAQ|Frequently Asked Questions)[^\n]*\n([\s\S]*?)(?=\n## [^#]|$)/i);
	if (faqMatch) {
		const faqSection = faqMatch[1];
		// Match numbered bold questions: "1. **question**" or "**Q1: question**"
		const qaRegex = /(?:\d+\.\s+)?\*\*(?:Q\d+:\s*)?(.+?)\*\*\s*\n+([\s\S]*?)(?=(?:\d+\.\s+)?\*\*(?:Q\d+:)?|$)/g;
		let match;
		while ((match = qaRegex.exec(faqSection)) !== null) {
			const answer = match[2].trim().replace(/\n+/g, ' ').replace(/\*([^*]+)\*/g, '$1').slice(0, 500);
			if (answer.length > 20) {
				faqItems.push({ question: match[1].trim(), answer });
			}
		}
	}
}

// Get related posts based on tags (only if we're on a post page)
const allPosts = await getCollection('blog');
const relatedPosts = post ? allPosts
    .filter(p => p.id !== post.id && p.data.tags?.some(tag => post.data.tags?.includes(tag)))
    .slice(0, 3) : [];
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} noindex={noindex} />
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "BlogPosting",
			"headline": title,
			"image": [heroImage],
			"datePublished": !isNaN(displayDate.getTime()) ? displayDate.toISOString() : new Date().toISOString(),
			"dateModified": updatedDate && !isNaN(new Date(updatedDate).getTime()) ? new Date(updatedDate).toISOString() : (!isNaN(displayDate.getTime()) ? displayDate.toISOString() : new Date().toISOString()),
			"author": [{
				"@type": "Person",
				"name": "Alex Zhang",
				"url": "https://ai-coding-flow.com/about/"
			}]
		})} />
		{faqItems.length >= 2 && (
			<script type="application/ld+json" set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "FAQPage",
				"mainEntity": faqItems.map(faq => ({
					"@type": "Question",
					"name": faq.question,
					"acceptedAnswer": {
						"@type": "Answer",
						"text": faq.answer
					}
				}))
			})} />
		)}
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
                padding: 0;
			}
			.hero-image {
				width: 100%;
                height: 50vh; /* Shorter image */
                position: relative;
                overflow: hidden;
			}
            /* ... (hero-image::after unchanged) ... */
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 0; 
				box-shadow: none;
                width: 100%;
                height: 100%;
                object-fit: cover; 
			}
			.prose {
				width: 900px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3.5rem;
				color: var(--gray-dark);
                /* Restore Glass Effect */
				background: rgba(10, 10, 10, 0.7); 
				backdrop-filter: blur(40px);
				-webkit-backdrop-filter: blur(40px);
				border-radius: 32px;
				border: 1px solid rgba(255,255,255,0.1);
				box-shadow: 0 -20px 60px -10px rgba(0,0,0,0.5);
				margin-top: -20vh; /* Move up significantly */
				position: relative;
				z-index: 10;
			}
			.breadcrumb {
                font-family: 'JetBrains Mono', monospace;
				font-size: 0.8rem;
				color: #94a3b8;
				margin-bottom: 2rem;
				display: flex;
                flex-wrap: wrap;
				gap: 0.8rem;
				font-weight: 500;
			}
			.breadcrumb a {
				color: #cbd5e1;
				text-decoration: none;
				transition: color 0.2s;
                border-bottom: 1px dashed transparent;
			}
			.breadcrumb a:hover {
				color: var(--accent);
                border-bottom-color: var(--accent);
			}
            .breadcrumb .current {
                color: #fff;
                opacity: 0.6;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                max-width: 300px;
            }

			.reading-time {
				margin-left: 0.5rem;
				opacity: 0.7;
				font-weight: 500;
			}
			.title {
				margin-bottom: 2.5rem;
				padding: 0;
				text-align: left;
                border-bottom: 1px solid rgba(255,255,255,0.05);
                padding-bottom: 2rem;
			}
			.title h1 {
				margin: 0 0 1rem 0;
				font-size: 3.2rem;
				line-height: 1.1;
				font-weight: 800;
				letter-spacing: -0.03em;
                color: #fff;
			}
			.date {
				margin-bottom: 0.5rem;
				color: var(--accent);
				font-weight: 600;
				font-size: 0.95rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                display: flex;
                align-items: center;
			}
			.last-updated-on {
				font-style: italic;
                font-size: 0.85rem;
                opacity: 0.8;
                margin-left: auto;
			}
			@media (max-width: 720px) {
                .hero-image {
                    height: 40vh;
                }
				.prose {
					width: 100%;
					padding: 1.5rem;
					margin-top: -5vh;
					border-radius: 20px 20px 0 0;
                    border: none;
                    border-top: 1px solid rgba(255,255,255,0.08);
				}
				.title h1 {
					font-size: 2.2rem;
				}
                .breadcrumb .current { display: none; }
                .post-navigation {
                    flex-direction: column;
                }
                .nav-link {
                    width: 100%;
                    text-align: center;
                }
                .nav-link.next {
                    text-align: center;
                    align-items: center;
                }
			}

            /* Post Navigation */
            .post-navigation {
                margin-top: 4rem;
                padding-top: 2rem;
                display: flex;
                justify-content: space-between;
                gap: 2rem;
                border-top: 1px solid rgba(255, 255, 255, 0.1);
            }
            .nav-link {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
                text-decoration: none;
                flex: 1;
                max-width: 48%;
                transition: all 0.3s ease;
                padding: 1rem;
                border-radius: 12px;
                background: rgba(255,255,255,0.02);
                border: 1px solid transparent;
            }
            .nav-link:hover {
                background: rgba(255,255,255,0.05);
                border-color: rgba(255,255,255,0.1);
                transform: translateY(-2px);
            }
            .nav-link.next {
                text-align: right;
                align-items: flex-end;
            }
            .nav-label {
                font-size: 0.8rem;
                color: #94a3b8;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                font-weight: 600;
            }
            .nav-title {
                color: #e2e8f0;
                font-weight: 600;
                line-height: 1.4;
            }
            .nav-link:hover .nav-title {
                color: var(--accent);
            }
            .nav-placeholder {
                flex: 1;
            }

            /* Related Posts */
            .related-posts {
                margin-top: 4rem;
                padding-top: 2rem;
                border-top: 1px solid rgba(255, 255, 255, 0.1);
            }
            .related-posts h3 {
                font-size: 1.5rem;
                color: #fff;
                margin-bottom: 2rem;
            }
            .related-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 1.5rem;
            }
            .related-card {
                display: flex;
                flex-direction: column;
                gap: 1rem;
                text-decoration: none;
                background: rgba(255,255,255,0.03);
                border-radius: 16px;
                overflow: hidden;
                border: 1px solid rgba(255,255,255,0.05);
                transition: all 0.3s ease;
            }
            .related-card:hover {
                background: rgba(255,255,255,0.08);
                transform: translateY(-4px);
            }
            .rp-image {
                height: 140px;
                overflow: hidden;
            }
            .rp-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
            .rp-content {
                padding: 1rem;
            }
            .rp-content h4 {
                font-size: 1rem;
                color: #e2e8f0;
                margin: 0;
                line-height: 1.4;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }
		</style>
	</head>

	<body>
		<Header />
        <BackgroundEffects />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt={title} loading="lazy" decoding="async" />}
				</div>
				<div class="prose">
					<nav class="breadcrumb">
						<a href="/">Home</a> <span>/</span> 
						<a href="/blog">Blog</a> <span>/</span> 
						<span class="current">{title}</span>
					</nav>
					<div class="title">
						<div class="date">
							<FormattedDate date={displayDate} />
							<span class="reading-time">• {readingTime} min read</span>
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
							</div>
						<h1>{title}</h1>
					</div>

					<!-- Top AdSense -->
					<div class="ad-unit" style="margin: 2rem 0; text-align: center; min-height: 90px;">
						<ins class="adsbygoogle"
							style="display:block"
							data-ad-client="ca-pub-2874421792108730"
							data-ad-slot="auto"
							data-ad-format="horizontal"
							data-full-width-responsive="true"></ins>
					</div>

					<slot />

					<!-- Bottom AdSense -->
					<div class="ad-unit" style="margin: 3rem 0; text-align: center; min-height: 250px;">
						<ins class="adsbygoogle"
							style="display:block"
							data-ad-client="ca-pub-2874421792108730"
							data-ad-slot="auto"
							data-ad-format="auto"
							data-full-width-responsive="true"></ins>
					</div>

					{relatedPosts.length > 0 && (
						<div class="related-posts">
							<h3>Related Insights</h3>
							<div class="related-grid">
								{relatedPosts.map(rp => (
									<a href={`/blog/${rp.id}`} class="related-card">
										<div class="rp-image">
											<img src={rp.data.heroImage} alt="" />
										</div>
										<div class="rp-content">
											<h4>{rp.data.title}</h4>
										</div>
									</a>
								))}
							</div>
						</div>
					)}

					<SocialShare title={title} url={Astro.url.href} />

                    <div class="post-navigation">
                        {prevPost ? (
                            <a href={`/blog/${prevPost.id}/`} class="nav-link prev">
                                <span class="nav-label">← Previous</span>
                                <span class="nav-title">{prevPost.data.title}</span>
                            </a>
                        ) : (
                            <div class="nav-placeholder"></div>
                        )}
                        
                        {nextPost ? (
                            <a href={`/blog/${nextPost.id}/`} class="nav-link next">
                                <span class="nav-label">Next →</span>
                                <span class="nav-title">{nextPost.data.title}</span>
                            </a>
                        ) : (
                            <div class="nav-placeholder"></div>
                        )}
                    </div>
                </div>
			</article>
		</main>
		<Footer />
		<script is:inline>
			// Initialize AdSense ad units
			document.querySelectorAll('.adsbygoogle').forEach(() => {
				try { (adsbygoogle = window.adsbygoogle || []).push({}); } catch(e) {}
			});
		</script>
		<script>
			// Wrap tables in scrollable container for mobile
			document.querySelectorAll('.prose table').forEach(table => {
				if (!table.parentElement?.classList.contains('table-scroll')) {
					const wrapper = document.createElement('div');
					wrapper.className = 'table-scroll';
					wrapper.style.cssText = 'width:100%;overflow-x:auto;-webkit-overflow-scrolling:touch;margin:2rem 0;';
					table.parentNode?.insertBefore(wrapper, table);
					wrapper.appendChild(table);
					table.style.margin = '0';
					table.style.minWidth = '600px';
				}
			});
		</script>
	</body>
</html>
