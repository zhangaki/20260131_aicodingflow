---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import AffiliateCard from '../components/AffiliateCard.astro';
import SocialShare from '../components/SocialShare.astro';

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = post.data;
const displayDate = pubDate instanceof Date ? pubDate : new Date(pubDate);

// Calculate Reading Time (rough estimation)
const wordCount = 1200; 
const readingTime = Math.ceil(wordCount / 200);
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "BlogPosting",
			"headline": title,
			"image": [heroImage],
			"datePublished": !isNaN(displayDate.getTime()) ? displayDate.toISOString() : new Date().toISOString(),
			"dateModified": updatedDate && !isNaN(new Date(updatedDate).getTime()) ? new Date(updatedDate).toISOString() : (!isNaN(displayDate.getTime()) ? displayDate.toISOString() : new Date().toISOString()),
			"author": [{
				"@type": "Person",
				"name": "Super Individual AI",
				"url": "https://example.com/about"
			}]
		})} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 800px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3rem;
				color: var(--gray-dark);
				background: var(--glass);
				backdrop-filter: blur(20px);
				-webkit-backdrop-filter: blur(20px);
				border-radius: 40px;
				border: var(--card-border);
				box-shadow: var(--box-shadow);
				margin-top: -6rem;
				position: relative;
				z-index: 10;
			}
			.breadcrumb {
				font-size: 0.8rem;
				color: #fff;
				margin-bottom: 1.5rem;
				display: flex;
				gap: 0.8rem;
				background: rgba(255, 255, 255, 0.03);
				padding: 0.4rem 1rem;
				border-radius: 100px;
				width: fit-content;
				border: 1px solid rgba(255, 255, 255, 0.08);
				font-weight: 600;
				letter-spacing: 0.02em;
			}
			.breadcrumb a {
				color: var(--gray);
				text-decoration: none;
				transition: color 0.2s;
			}
			.breadcrumb a:hover {
				color: var(--accent);
			}
			.reading-time {
				margin-left: 0.5rem;
				opacity: 0.7;
				font-weight: 500;
			}
			.title {
				margin-bottom: 2.5rem;
				padding: 0;
				text-align: left;
			}
			.title h1 {
				margin: 0;
				font-size: 3rem;
				line-height: 1.1;
				font-weight: 800;
				letter-spacing: -0.03em;
				background: linear-gradient(135deg, #fff 0%, var(--accent-light) 100%);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
			}
			.date {
				margin-bottom: 0.75rem;
				color: var(--gray);
				font-weight: 600;
				font-size: 0.95rem;
			}
			.last-updated-on {
				font-style: italic;
			}
			@media (max-width: 720px) {
				.prose {
					width: 100%;
					padding: 1.5em;
					margin-top: -2rem;
					border-radius: 20px;
					overflow-x: hidden;
				}
				.title h1 {
					font-size: 2rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt={title} loading="lazy" decoding="async" />}
				</div>
				<div class="prose">
					<nav class="breadcrumb">
						<a href="/">Home</a> <span>/</span> 
						<a href="/blog">Blog</a> <span>/</span> 
						<span class="current">{title}</span>
					</nav>
					<div class="title">
						<div class="date">
							<FormattedDate date={displayDate} />
							<span class="reading-time">â€¢ {readingTime} min read</span>
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
							</div>
						<h1>{title}</h1>
					</div>
					<slot />
					<SocialShare title={title} url={Astro.url.href} />
				</div>
			</article>
		</main>
		<Footer />
		<script>
			// Wrap tables in scrollable container for mobile
			document.querySelectorAll('.prose table').forEach(table => {
				if (!table.parentElement?.classList.contains('table-scroll')) {
					const wrapper = document.createElement('div');
					wrapper.className = 'table-scroll';
					wrapper.style.cssText = 'width:100%;overflow-x:auto;-webkit-overflow-scrolling:touch;margin:2rem 0;';
					table.parentNode?.insertBefore(wrapper, table);
					wrapper.appendChild(table);
					table.style.margin = '0';
					table.style.minWidth = '600px';
				}
			});
		</script>
	</body>
</html>
