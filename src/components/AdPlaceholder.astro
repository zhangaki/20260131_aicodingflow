---
interface Props {
	id?: string;
}

const { id = "default-ad" } = Astro.props;
---

<div class="ad-container" data-ad-id={id}>
	<div class="ad-label">ADVERTISEMENT</div>
	<div class="ad-box">
		<div class="ad-script-host">
			<script is:inline data-astro-rerun>
				var atOptions = {
					'key': '3f7b1742a905334425933a7cc4046900',
					'format': 'iframe',
					'height': 250,
					'width': 300,
					'params': {}
				};
			</script>
			<script
				is:inline
				data-astro-rerun
				src="https://www.highperformanceformat.com/3f7b1742a905334425933a7cc4046900/invoke.js"
			></script>
		</div>
		<div class="placeholder-text">Ad Placement for {id}</div>
	</div>
</div>

<style>
	.ad-container {
		margin: 2.5rem 0;
		text-align: center;
		width: 100%;
	}
	.ad-label {
		font-size: 0.7rem;
		color: var(--gray);
		letter-spacing: 0.1em;
		margin-bottom: 0.5rem;
		font-weight: 700;
	}
	.ad-box {
		background: rgba(255, 255, 255, 0.03);
		border: 1px dashed var(--gray-light);
		border-radius: 8px;
		min-height: 250px;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
	}
	.ad-script-host {
		max-width: 100%;
		overflow-x: auto;
		overflow-y: hidden;
		-webkit-overflow-scrolling: touch;
	}
	.ad-script-host :global(iframe) {
		display: block;
		margin: 0 auto;
		border: 0;
	}
	.placeholder-text {
		color: var(--gray);
		font-size: 0.9rem;
		font-style: italic;
	}
</style>
