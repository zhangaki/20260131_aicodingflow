---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2 class="logo"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="action-links">
			<a href="#" class="github-link" aria-label="GitHub">
				<svg viewBox="0 0 16 16" width="24" height="24"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/></svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		position: sticky;
		top: 0.8rem;
		z-index: 1000;
		margin: 0 auto;
		width: calc(100% - 2rem);
		max-width: 1200px;
		transition: top 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		background: var(--glass);
		backdrop-filter: blur(12px);
		border: var(--card-border);
		border-radius: 100px;
		padding: 0.2rem 1.2rem;
		box-shadow: var(--box-shadow);
	}
	h2.logo {
		margin: 0;
		display: flex;
		align-items: center;
	}
	.logo a {
		font-family: var(--font-display);
		font-weight: 900;
		font-size: 1rem;
		text-decoration: none;
		color: #fff;
		letter-spacing: -0.05em;
		line-height: 1;
		display: block;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.internal-links a {
		padding: 0.4rem 0.8rem;
		color: var(--gray);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.9rem;
		border-radius: 50px;
		transition: all 0.2s;
		line-height: 1;
		display: block;
	}
	.internal-links a:hover, .internal-links a.active {
		color: #fff;
		background: rgba(255, 255, 255, 0.05);
	}
	.action-links a {
		color: var(--gray);
		transition: color 0.2s;
	}
	.action-links a:hover {
		color: #fff;
	}
	@media (max-width: 720px) {
		.internal-links { display: none; }
	}
</style>
