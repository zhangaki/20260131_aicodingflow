---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2 class="logo"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">GEO Alerts</HeaderLink>
			<HeaderLink href="/tools/aeo-audit" class="accent-link">AI Visibility</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="action-links">
			<button class="menu-toggle" onclick="document.getElementById('mobileMenu').classList.toggle('open')" aria-label="Menu">
				<svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M3 12h18M3 6h18M3 18h18"/>
				</svg>
			</button>
		</div>
	</nav>
	
	<!-- Mobile Menu -->
	<div class="mobile-menu" id="mobileMenu">
		<a href="/" onclick="document.getElementById('mobileMenu').classList.remove('open')">Home</a>
		<a href="/blog" onclick="document.getElementById('mobileMenu').classList.remove('open')">GEO Alerts</a>
		<a href="/tools/aeo-audit" class="accent-link" onclick="document.getElementById('mobileMenu').classList.remove('open')">AI Visibility</a>
		<a href="/about" onclick="document.getElementById('mobileMenu').classList.remove('open')">About</a>
	</div>
</header>

<style>
	header {
		position: sticky;
		top: 1.5rem;
		z-index: 1000;
		margin: 0 auto;
		width: calc(100% - 3rem);
		max-width: 1400px;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		background: rgba(15, 23, 42, 0.9);
		backdrop-filter: blur(30px);
		-webkit-backdrop-filter: blur(30px);
		border: 1px solid rgba(96, 165, 250, 0.25);
		border-radius: 100px;
		padding: 0.6rem 2.2rem;
		box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.6);
	}
	h2.logo {
		margin: 0;
	}
	.logo a {
		font-family: var(--font-display);
		font-weight: 900;
		font-size: 1.5rem;
		text-decoration: none;
		color: #fff;
		letter-spacing: -0.02em;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.8rem;
	}
	.internal-links a {
		padding: 0.6rem 1.2rem;
		color: var(--gray);
		text-decoration: none;
		font-weight: 600;
		font-size: 1.05rem;
		border-radius: 50px;
	}
	.internal-links a:hover {
		color: #fff;
		background: rgba(255, 255, 255, 0.05);
	}
	.internal-links a.accent-link {
		color: var(--accent);
		background: rgba(111, 177, 252, 0.05);
		border: 1px solid rgba(111, 177, 252, 0.2);
	}
	.action-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.action-links a {
		padding: 0.5rem;
		color: var(--gray);
		display: flex;
		align-items: center;
	}
	.action-links a:hover {
		color: #fff;
	}
	
	/* Menu Toggle */
	.menu-toggle {
		display: none;
		background: none;
		border: none;
		padding: 0.5rem;
		cursor: pointer;
		color: var(--gray);
	}
	.menu-toggle:hover { color: #fff; }

	/* Mobile Menu - Overlay */
	.mobile-menu {
		display: none;
		flex-direction: column;
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		background: rgba(15, 23, 42, 0.98);
		backdrop-filter: blur(30px);
		border: 1px solid rgba(96, 165, 250, 0.2);
		border-radius: 20px;
		margin-top: 0.75rem;
		padding: 1rem;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
		z-index: 999;
	}
	.mobile-menu.open { display: flex; }
	.mobile-menu a {
		padding: 1rem 1.5rem;
		color: #f1f5f9;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
		border-radius: 12px;
	}
	.mobile-menu a:hover {
		background: rgba(96, 165, 250, 0.1);
	}
	.mobile-menu a.accent-link {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		header {
			top: 1rem;
			width: calc(100% - 2rem);
		}
		nav {
			padding: 0.5rem 1.25rem;
			border-radius: 20px;
		}
		.logo a {
			font-size: 1.1rem;
		}
		.internal-links { display: none; }
		.github-link { display: none; }
		.menu-toggle { display: flex; }
	}
</style>
